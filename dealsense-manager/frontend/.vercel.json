{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "build": {
    "env": {
      "NEXT_PUBLIC_NODE_ENV": "production",
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "src/app/**": {
      "includeFiles": "src/**"
    }
  }
}